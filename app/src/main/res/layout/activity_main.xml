<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/title"
    android:background="@drawable/bg2"
    android:touchscreenBlocksFocus="true"
    android:orientation="vertical"
    android:gravity="bottom">

    <ImageView
        android:id="@+id/cerva1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cerva2"
        android:layout_alignLeft="@+id/cerva2"
        android:layout_alignEnd="@+id/cerva2"
        android:layout_alignRight="@+id/cerva2"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="false"
        android:src="@drawable/cerv62"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        android:id="@+id/button3"
        android:textSize="25dp"
        android:layout_below="@+id/textoResultado"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textoResultado"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="19dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:id="@+id/button2"
        android:singleLine="false"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/cerva2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="12dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cerv72"
        android:visibility="invisible" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHighlight="#ffff1c0c"
        android:textStyle="bold"
        android:textColor="#ffff2c1f"
        android:singleLine="false"
        android:checked="false" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/proibido"
        android:src="@drawable/proibido"
        android:adjustViewBounds="true"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/checkBox"
        android:layout_alignRight="@+id/textoResultado"
        android:layout_alignEnd="@+id/textoResultado" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saideira"
        android:src="@drawable/saideira4"
        android:adjustViewBounds="false"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

</RelativeLayout>
